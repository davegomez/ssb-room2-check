{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2018",
    "outDir": "./lib",
    "lib": ["es5", "scripthost", "es2015", "es2016", "es2017", "DOM"]
  },
  "files": [
    "src/index.ts",
    "src/bin.ts",
    "src/handle-cmd.ts",
    "src/handle-uri.ts",
    "src/commands/alias-consume.ts",
    "src/commands/alias-register.ts",
    "src/commands/alias-revoke.ts",
    "src/commands/claim.ts",
    "src/commands/sign-in.ts",
    "src/commands/sign-out.ts",
    "src/commands/whoami.ts"
  ],
  "exclude": ["node_modules"]
}
